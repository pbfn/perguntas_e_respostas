<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="buttons">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="text_view_title">
        <item name="android:textColor">#758CFF</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>

    <style name="text_view_subtitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>


    <style name="card_options">
        <item name="android:background">@drawable/card_options</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>